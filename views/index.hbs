        {{#each anime}}
        <div class="card my-3">
            <div class="card-body">
                <h6 id="{{this._id}}_title" class="card-title">{{this.name}}</h6>
                <div class="row">
                    <p class="col-auto">Genre : {{this.genre}}</p>
                    <p class="col-auto">Type : {{this.type}}</p>
                    <p class="col-auto">Watched : <span id="{{this._id}}_episode">{{this.progress}}</span></p>
                </div>
                <div class="row" id="{{this._id}}_up_field" hidden>
                    <div class="col-auto">
                        <label for="1" class="">Watched :</label>
                    </div>
                    <div class="col-auto">
                        <div class="mb-3">
                            <input type="number" class="form-control form-control-sm" id="{{this._id}}_watched_inp">
                        </div>
                    </div>
                </div>
                <a href="{{this.source_url}}" target="_blank" class="card-link">Watch here</a>
                <button type="button" class="btn btn-info card-link" onclick="update_fun('{{this._id}}')">Update</button>
            </div>
        </div>
        {{/each}}
    </div>
<hr class="border border-primary border-2 opacity-50">

    <div id="add_form" class="container card my-4">
    <form>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control form-control-sm" id="title">
        </div>
        <div class="mb-3">
            <label for="link_url" class="form-label">Url</label>
            <input type="text" class="form-control form-control-sm" id="link_url">
        </div>
        <div class="row">
            <div class="col-auto">
                <select id="select_genre" class="form-select form-select-sm" aria-label=".form-select-sm example">
                    <option selected>Select Genre</option>
                    {{#each item}}
                    <option value="{{this.title}}">{{this.title}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-auto">
                <label for="link_url" class="">Watched :</label>
            </div>
            <div class="col-auto">
                <div class="mb-3">
                    <input type="number" class="form-control form-control-sm" id="watched_inp">
                </div>
            </div>
        </div>

        <div class="form-check my-2">
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Anime">
            <label class="form-check-label" for="inlineRadio1">Anime</label>
            </div>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Manga">
